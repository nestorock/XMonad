Config { 
       -- Appearance
         font         = "xft:Fugaz One:size=13"
       , bgColor      = "black"
       , fgColor      = "grey"
--       , lowerOnStart = False
--       , position     = TopW L 100       
       , position     = Static { xpos = 0, ypos = 0, width = 1920, height = 35 }
--       , position = Top
       , border       = FullB
       , borderColor  =  "yellow"
       , commands     = [ Run Weather "LEGT" ["-t","<tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                        , Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                        , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                        , Run Memory ["-t","<usedratio>%"] 10

                        -- Time and Date indicator
                        --    (%F = y-m-d date, %a = day of week, %T = h:m:s time)
                        , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                        , Run Com "/home/nestorock/.xmonad/scripts/volumen.sh" [] "volumen" 10
                        , Run StdinReader
                        ]
       , sepChar      = "%"
       , alignSep     = "}{"
